<%- include("template/cabecera", {tituloWeb: "../Pagina Principal", archivoCss: "", archivoBootstrap: "../bootstrap.min.css"}) %>
    <div class="container">

        <h1>CRUD Mongo Db</h1>
        
        <a
            class="btn btn-success btn-block my-4 px-5"
            href="/mascotas/crear"
        >
            Crear nueva mascota
        </a>

        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Accion</th>
                </tr>
            </thead>
            <tbody>
                <% if (arrayMascotas.length > 0) { %>
                    <% arrayMascotas.forEach(elemento => { %>
                        <tr>
                            <th scope="row"><%= elemento.id %></th>
                            <td><%= elemento.nombre %></td>
                            <td><%= elemento.descripcion %></td>
                            <td>
                                <a 
                                    href="mascotas/<%= elemento.id %>"
                                    class="btn btn-warning btn-sm"
                                >
                                    Editar
                                </a>
                            </td>
                          </tr>
                    <% }) %>
                <% } %>
              
            </tbody>
        </table>

        
    </div>
<%- include("template/footer", {archivoPopperJs: "../popper.min.js", archivoBootstrapJs: "../bootstrap.min.js"}) %>
